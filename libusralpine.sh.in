GRAY="\e[90m"
LIGHT_GRAY="\e[37m"
WHITE="\e[97m"
LIGHT_CYAN="\e[96m"
ENDCOLOR="\e[0m"

program_start() 
{
    echo -e "${LIGHT_GRAY}"
}

program_end() 
{
    echo -e "${ENDCOLOR}"
}

header()
{
    echo -e "${LIGHT_CYAN}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${LIGHT_GRAY}"
}

step()
{
    echo -e "${WHITE}-> $1 ${LIGHT_GRAY}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${LIGHT_CYAN}# note: ${LIGHT_GRAY}"
}

footer_text()
{
    echo -e "${LIGHT_CYAN}# $1${LIGHT_GRAY}"
}

footer_end()
{
    echo
    echo
}