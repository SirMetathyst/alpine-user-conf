#!/bin/sh

#########################################################################################
# MODULE 
#########################################################################################

GRAY="\e[90m"
LIGHT_BLUE="\e[94m"
ENDCOLOR="\e[0m"

header()
{
    echo -e "${LIGHT_BLUE}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${ENDCOLOR}"
}

step()
{
    echo -e "${GRAY}-> $1${ENDCOLOR}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${LIGHT_BLUE}note: ${ENDCOLOR}"
}

footer_text()
{
    echo -e "${LIGHT_BLUE}# $1${ENDCOLOR}"
}

footer_end()
{
    echo
    echo
}