#!/bin/sh

#########################################################################################
# MODULE 
#########################################################################################

GRAY="\e[90m"
BLUE="\e[34m"
ENDCOLOR="\e[0m"

header()
{
    echo -e "${BLUE}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${ENDCOLOR}"
}

step()
{
    echo -e "${GRAY}-> $1${ENDCOLOR}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${BLUE}note: ${ENDCOLOR}"
}

footer_text()
{
    echo -e "${BLUE}# $1${ENDCOLOR}"
}

footer_end()
{
    echo
    echo
}