#!/bin/sh

#########################################################################################
# MODULE 
#########################################################################################

GRAY="\e[90m"
WHITE="\e[97m"
LIGHT_CYAN="\e[96m"
ENDCOLOR="\e[0m"

program_start() {
    echo -e "${GRAY}"
}

program_end() {
    echo -e "${ENDCOLOR}"
}

header()
{
    echo -e "${LIGHT_CYAN}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${GRAY}"
}

step()
{
    echo -e "${WHITE}-> $1${GRAY}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${LIGHT_CYAN}note: ${GRAY}"
}

footer_text()
{
    echo -e "${LIGHT_CYAN}# $1${GRAY}"
}

footer_end()
{
    echo
    echo
}