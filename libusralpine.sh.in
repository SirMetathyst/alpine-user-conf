#!/bin/sh

#########################################################################################
# MODULE 
#########################################################################################

WHITE="\e[97m"
GRAY="\e[90m"
CYAN="\e[36m"
LIGHT_GRAY="\e[37m"
LIGHT_MAGENTA="\e[95m"
LIGHT_CYAN="\e[96m"
LIGHT_RED="\e[91m"
ENDCOLOR="\e[0m"

header()
{
    echo -e "${CYAN}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${ENDCOLOR}"
}

error()
{
    echo -e "${LIGHT_RED}* $1${ENDCOLOR}"
    exit 1
}

task()
{
    echo -e "${CYAN}-- $1${ENDCOLOR}"   
}

step()
{
    echo -e "${WHITE}-> $1${ENDCOLOR}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${CYAN}# note:${ENDCOLOR}"
}

footer_text()
{
    echo -e "${CYAN}# $1${ENDCOLOR}"
}

footer_end()
{
    echo
    echo
}