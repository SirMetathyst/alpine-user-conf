#!/bin/sh

#########################################################################################
# MODULE 
#########################################################################################

GRAY="\e[90m"
LIGHT_CYAN="\e[96m"
ENDCOLOR="\e[0m"

header()
{
    echo -e "${LIGHT_CYAN}"
    echo "#########################################################################################"
    echo "# $1"   
    echo "#########################################################################################"
    echo -e "${ENDCOLOR}"
}

step()
{
    echo -e "${GRAY}-> $1${ENDCOLOR}"   
}

footer_start()
{
    echo
    echo 
    echo -e "${LIGHT_CYAN}note: ${ENDCOLOR}"
}

footer_text()
{
    echo -e "${LIGHT_CYAN}# $1${ENDCOLOR}"
}

footer_end()
{
    echo
    echo
}